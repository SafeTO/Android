<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackwestern.safeto.MainActivity">

    <Button
        android:id="@+id/settingBtn"
        android:layout_width="157dp"
        android:layout_height="89dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toEndOf="@+id/reportBtn" />

    <Button
        android:id="@+id/dashboardBtn"
        android:layout_width="157dp"
        android:layout_height="89dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="24dp"
        android:text="Dashboard"
        app:layout_constraintBottom_toTopOf="@+id/searchBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/safewalkBtn"
        android:layout_width="157dp"
        android:layout_height="89dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Safe walk"
        app:layout_constraintBottom_toTopOf="@+id/resourcesBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toEndOf="@+id/dashboardBtn" />

    <Button
        android:id="@+id/reportBtn"
        android:layout_width="157dp"
        android:layout_height="89dp"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="24dp"
        android:text="Report a crime"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="157dp"
        android:layout_height="89dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="24dp"
        android:text="Search an Area"
        app:layout_constraintBottom_toTopOf="@+id/reportBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/resourcesBtn"
        android:layout_width="157dp"
        android:layout_height="89dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Resources"
        app:layout_constraintBottom_toTopOf="@+id/settingBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toEndOf="@+id/searchBtn" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/Logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

</android.support.constraint.ConstraintLayout>
